<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="bottom"
    android:background="#FEFEFE">

    <LinearLayout
        android:id="@+id/ll_bottom_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_bottom_home"
            android:layout_width="22dp"
            android:layout_height="27dp"
            android:adjustViewBounds="true"
            android:src="@drawable/bottom_tab_home_focus" />

        <TextView
            android:id="@+id/tv_bottom_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="首页"
            android:textColor="@color/main_bg"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_study"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_bottom_study"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/bottom_tab_study_unfocus" />

        <TextView
            android:id="@+id/tv_bottom_study"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="学习"
            android:textColor="@color/tabbar_text"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_course"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_bottom_course"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/bottom_tab_course_unfocus" />

        <TextView
            android:id="@+id/tv_bottom_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="线上课程"
            android:textColor="@color/tabbar_text"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_book"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_bottom_book"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/bottom_tab_book_unfocus" />

        <TextView
            android:id="@+id/tv_bottom_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="错题本"
            android:textColor="@color/tabbar_text"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_mine"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_bottom_mine"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/bottom_tab_mine_unfocus" />

        <TextView
            android:id="@+id/tv_bottom_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="我的"
            android:textColor="@color/tabbar_text"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>